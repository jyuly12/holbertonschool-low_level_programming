#include "holberton.h"
/**
 * print_diagonal - Draws a diagonal line on the terminal.
 *
 * Return: Always 0.
 */
void print_diagonal(int n)
{
int i, j;
if (n > 0)
{
_putchar('\\');
_putchar('\n');
for (i = 0; i < n; i++)
{
for (j = i; j >= 0; j--)
{
_putchar(' ');
}
_putchar('\\');
}
}
_putchar('\n'); 
}
